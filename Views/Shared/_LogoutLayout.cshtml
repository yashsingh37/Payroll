<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link href="~/Everything/allcss/allallall.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="navbarr">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Employee Details", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" })*@   
            </div>
            <div class="navbar-collapse collapse">
                
                @Html.Partial("_LogoutPartial")
                <ul class="nav navbar-nav">
                    
                    <li>@Html.ActionLink("PAYROLL", "Register", "User", routeValues: null, htmlAttributes: new { id = "registerLink2" })</li>
